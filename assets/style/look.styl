// Fields

f_main = silver
f_hover = grey
f_focus = c_magenta
f_disabled = lighten(silver,20)
f_locked = lighten(silver, 5)
f_valid = c_blue

.input
	&.b
		margin 5px
		background white
		border 1px solid grey
		border-color darken(f_main,20) f_main f_main
		font-size 20px
		padding 0px // 0.2ex 0.3ex
		border-radius 2px
		transition border-color fast, color fast
		&:hover
			border-color darken(f_hover,20) f_hover f_hover
		&.focus
			border-color darken(f_focus,20) f_focus f_focus
		&.p-low.focus
			border-color darken(c_blue,20) c_blue c_blue

	input.h
		padding 0px 5px
		width 200px
		box-sizing border-box
		height 35px
		display inline-block
		vertical-align middle
		box-shadow none
		-webkit-appearance none
		&,&:hover,&:focus,&:active
			outline none
			border 0px none
			font 20px Helvetica, Arial, sans-serif
		&.f
			width 100%
			// display block
		&.auto
			transition width fast
			width 130px
			&.medium
				&.filled, &.focus
					width 160px
		&.small
			width 120px
		&.date
			width 14ex
		&.lockable
			&.valid
				color f_locked
	.icon
		display inline-block
		vertical-align middle
		overflow hidden
		transition color fast
		//width 30px
		line-height 30px
		overflow visible
		user-select none
		cursor default
		padding 4px 0 1px
		&.padded
			padding-left 1ex
			padding-right 1ex
		label[for]
			cursor pointer
		&.delete
			padding-top 1px
			color c_red
			margin-right 1ex
			cursor pointer
			&:hover
				color darken(c_red,10)
		&.due
			padding-top 2px
			padding-bottom 3px

	.validator
		color f_main
		&.valid
			color darken(f_valid,5)

	.priority
		&.priority-1
			color f_disabled
		&.priority-2
			color p_medium
		&.priority-3
			color p_high

	.action
		appearance none
		padding 0px 2ex
		margin 0px
		line-height 35px
		border none
		height 35px
		background none
		font-size 20px
		cursor pointer
		overflow hidden
		transition color fast
		text-shadow 0px 1px 0px white
		color c_blue
		&:active
			color c_cyan
		&:focus
			color black
		&:hover
			color black

.separator
	border-left 1px solid f_main
	margin-left 2px
	padding-left 5px

@media screen and (max-width: 1000px)
	#creation-flexer
		display block
		> .flex + .flex
			border-top 1px solid f_main
	#creation-right > .separator:first-child
		border none

@media screen and (max-width: 520px)
	#creation-right
		display block
		> .separator
			border none
			.icon.delete
				float right


