body
	background white
	font-family sans-serif
	margin 0
	padding 0 0 20px

	header
		margin 0px
		padding 0px
		//overflow hidden
		height 75px
		z-index 200

	#hat
		font-decorated 700
		float left
		margin 0px
		padding 10px
		color m_color

