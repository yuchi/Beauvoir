// Some base styles

.unavailable
	color desaturate(darken(c_red,20),20) !important
	text-decoration line-through !important

// Logo

logo(bg)
	_a = 21px
	_b = 34px

	.in
		position absolute
		left 0px
		background bg
	.rc, .sq
		overflow hidden
		position relative
		width _b

	.rc
		height _a
		.in
			bottom 0px
			_x = (_b / 2) + _a
			width _x
			height _x
			border-radius bottom right _x
	.sq
		height _b
		.in
			top 0px
			_x = _b
			width _x
			height _x
			border-radius top right _x

// Contents

@import 'partials/context';
@import 'partials/login';
@import 'partials/page';
