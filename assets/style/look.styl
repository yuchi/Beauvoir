html, body
	height 100%
	margin 0px
	padding 0px

#wrap
	min-height 100%
	position relative
	> *
		position relative

#footer-limiter
	padding 0 0 110px

footer
	margin -70px 0 0
	width 100%
	left 0px
	text-align center
	color c_base01
	position relative
	a
		color c_base03
		text-decoration none

.hide
	display none


tick_size = 25px

.tasks
	border-radius 5px
	width 100%
	padding 0px
	margin 10px 0
.task
	padding 5px
	list-style none
	display block
	overflow hidden

	.toggle
		width tick_size
		height tick_size
		margin 5px
		line-height tick_size
		font-size tick_size * 0.8
		float left
		border-radius 2px
		text-indent tick_size * -2
		overflow hidden
		background c_base02
		cursor pointer
		text-align center
		transition text-indent slow, color slow, background slow
		box-shadow inset 0px 2px 2px -2px c_base03
		text-shadow 0px 1px 1px c_base03

	.info
		line-height tick_size - 3px
		padding 8px 0 5px
		margin-left tick_size + 17px
		.assignedTo
			color grey
			padding 0 .5ex
			margin 0 .5ex
			&:before
				content 'â†’ '
			span + span
				&:before
					content: ', '
			.closed span
				text-decoration line-through

	.archive
		display none
		cursor pointer
		float right
		margin 5px
		line-height tick_size - 3px
		padding-top 3px
		transition opacity fast ease fast
		color c_base03
		opacity 0

	time
		text-transform uppercase
		font-size 0.6em
		color c_base01
		&:before
			content '('
		&:after
			content ')'

	&.completed
		.toggle
			text-indent 0px
			background grey
		.name
			text-decoration line-through
		.archive
			display block
		&:hover .archive
			opacity 1
			transition opacity fast ease 0

	task(main, bg)
		background bg
		color main
		.toggle
			color bg

	&.priority-1
		task c_base03 white
	&.priority-2
		task p_medium white
	&.priority-3
		task p_high c_base3

